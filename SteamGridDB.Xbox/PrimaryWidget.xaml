<Page
    x:Class="SteamGridDB.Xbox.PrimaryWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:SteamGridDB.Xbox.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SteamGridDB.Xbox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SteamGridDB.Xbox.Models"
    xmlns:sgdbModels="using:SteamGridDB.Xbox.Services.SteamGridDB.Models"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Modern Button Style  -->
        <Style x:Key="FluentIconButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>
    </Page.Resources>

    <Grid Background="#1F1F1F">
        <!--  Main Content  -->
        <Grid x:Name="MainContentPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header - Fluent Style  -->
            <Grid
                Grid.Row="0"
                Padding="16,12"
                Background="#252525">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  App Icon  -->
                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Foreground="#FFFFFF"
                    Glyph="&#xE7FC;" />

                <!--  Title  -->
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#FFFFFF"
                    Text="Xbox Installed Games Library" />

                <!--  Header Actions  -->
                <StackPanel
                    Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Width="32"
                        Height="32"
                        Click="RefreshButton_Click"
                        Style="{StaticResource FluentIconButton}"
                        ToolTipService.ToolTip="Refresh">
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="14"
                            Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>

            <!--  Game entries list  -->
            <Grid Grid.Row="1" Background="#1F1F1F">
                <!--  Instructions panel  -->
                <StackPanel
                    x:Name="InstructionsPanel"
                    Padding="24"
                    VerticalAlignment="Center"
                    Spacing="12"
                    Visibility="Collapsed">
                    <FontIcon
                        HorizontalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="48"
                        Foreground="#66FFFFFF"
                        Glyph="&#xE8F7;" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#FFFFFF"
                        Text="Access Required" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="#99FFFFFF"
                        Text="Grant file system permission to view your library"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                    <Button
                        Margin="0,12,0,0"
                        Padding="16,8"
                        HorizontalAlignment="Center"
                        Background="#107C10"
                        Content="Open Settings"
                        CornerRadius="4"
                        Foreground="White" />
                </StackPanel>

                <!--  Game entries ListView - Fluent Style  -->
                <ListView
                    x:Name="GameEntriesListView"
                    Padding="8,0"
                    Background="Transparent"
                    IsItemClickEnabled="False"
                    ItemsSource="{x:Bind GameEntries}"
                    SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,0,0,2" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid
                                            x:Name="RootGrid"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="6">
                                            <ContentPresenter
                                                Margin="12,8"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}" />
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="PointerOver">
                                                        <VisualState.Setters>
                                                            <Setter Target="RootGrid.Background" Value="#2D2D2D" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <VisualState.Setters>
                                                            <Setter Target="RootGrid.Background" Value="#333333" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:GameEntry">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Game image - Modern rounded  -->
                                <Grid
                                    Grid.Column="0"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="4">
                                    <Grid.Clip>
                                        <RectangleGeometry Rect="0,0,48,48" />
                                    </Grid.Clip>
                                    <Border Background="#2D2D2D" CornerRadius="4">
                                        <Grid>
                                            <Image
                                                Source="{x:Bind Image, Mode=OneWay}"
                                                Stretch="UniformToFill"
                                                Visibility="{x:Bind ImageVisibility, Mode=OneWay}" />
                                            <FontIcon
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="20"
                                                Foreground="#66FFFFFF"
                                                Glyph="&#xE7C5;"
                                                Visibility="{x:Bind PlaceholderVisibility, Mode=OneWay}" />
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!--  Game info - Modern typography  -->
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center">
                                    <!--  Game Name  -->
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#FFFFFF"
                                        Text="{x:Bind Name, Mode=OneWay}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />

                                    <!--  Image Filename  -->
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#99FFFFFF"
                                        Opacity="0.9"
                                        Text="{x:Bind ImageFileName, Mode=OneWay}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />

                                    <!--  Platform info  -->
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#99FFFFFF"
                                        Opacity="0.8">
                                        <Run Text="{x:Bind Platform, Mode=OneWay}" />
                                        <Run Text=" • " />
                                        <Run Text="{x:Bind PlatformId, Mode=OneWay}" />
                                        <Run Text=" • Added: " />
                                        <Run Text="{x:Bind AddedDateFormatted, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>

                                <!--  Action buttons - Fluent style  -->
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="4">
                                    <!--  Restore button  -->
                                    <Button
                                        Width="32"
                                        Height="32"
                                        Click="RestoreBackup_Click"
                                        Style="{StaticResource FluentIconButton}"
                                        Tag="{x:Bind}"
                                        ToolTipService.ToolTip="Restore backup"
                                        Visibility="{x:Bind RestoreButtonVisibility, Mode=OneWay}">
                                        <FontIcon
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="14"
                                            Glyph="&#xE7A7;" />
                                    </Button>

                                    <!--  Edit/Search button container - ensures alignment  -->
                                    <Grid Width="32" Height="32">
                                        <!--  Search button (for Unknown games)  -->
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Click="SearchGameImage_Click"
                                            Style="{StaticResource FluentIconButton}"
                                            Tag="{x:Bind}"
                                            ToolTipService.ToolTip="Search manually"
                                            Visibility="{x:Bind SearchButtonVisibility, Mode=OneWay}">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="14"
                                                Glyph="&#xE721;" />
                                        </Button>

                                        <!--  Edit button  -->
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Click="EditGameImage_Click"
                                            IsEnabled="{x:Bind CanEditImage, Mode=OneWay}"
                                            Style="{StaticResource FluentIconButton}"
                                            Tag="{x:Bind}"
                                            ToolTipService.ToolTip="Change artwork"
                                            Visibility="{x:Bind EditButtonVisibility, Mode=OneWay}">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="14"
                                                Glyph="&#xE104;" />
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--  Status bar - Minimal  -->
            <Border
                Grid.Row="2"
                Padding="16,8"
                Background="#252525"
                BorderBrush="#333333"
                BorderThickness="0,1,0,0">
                <TextBlock
                    x:Name="StatusText"
                    FontSize="11"
                    Foreground="#99FFFFFF"
                    Text="Loading..." />
            </Border>
        </Grid>

        <!--  Grid Selection Panel - Full Screen Slide Up  -->
        <Grid
            x:Name="GridSelectionPanel"
            Background="#1F1F1F"
            RenderTransformOrigin="0.5,0.5"
            Visibility="Collapsed">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="GridPanelTransform" Y="800" />
            </Grid.RenderTransform>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Panel Header with Back Button  -->
            <Grid
                Grid.Row="0"
                Padding="16,12"
                Background="#252525">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Back Button  -->
                <Button
                    Grid.Column="0"
                    Width="32"
                    Height="32"
                    Margin="0,0,12,0"
                    Click="CloseGridPanel_Click"
                    Style="{StaticResource FluentIconButton}"
                    ToolTipService.ToolTip="Back">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Glyph="&#xE0A6;" />
                </Button>

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#FFFFFF"
                    Text="{x:Bind GridPanelHeaderText, Mode=OneWay}"
                    TextWrapping="Wrap" />

                <!--  Optional: More options button  -->
                <Button
                    Grid.Column="2"
                    Width="32"
                    Height="32"
                    Style="{StaticResource FluentIconButton}"
                    ToolTipService.ToolTip="More options"
                    Visibility="Collapsed">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Glyph="&#xE712;" />
                </Button>
            </Grid>

            <!--  Grid Images List  -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <StackPanel Padding="16">
                        <!--  Grid images  -->
                        <GridView
                            x:Name="GridImagesView"
                            IsItemClickEnabled="True"
                            ItemClick="GridImage_Click"
                            SelectionMode="None">
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="Margin" Value="4" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </GridView.ItemContainerStyle>
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="models:GridImageItem">
                                    <Grid
                                        Width="140"
                                        Height="140"
                                        Background="#2D2D2D"
                                        CornerRadius="6">
                                        <Grid.Clip>
                                            <RectangleGeometry Rect="0,0,140,140" />
                                        </Grid.Clip>
                                        <Image Source="{x:Bind ThumbUrl, Mode=OneWay}" Stretch="UniformToFill" />
                                        <Border
                                            Padding="8,4"
                                            VerticalAlignment="Bottom"
                                            Background="#CC000000">
                                            <TextBlock
                                                FontSize="9"
                                                FontWeight="SemiBold"
                                                Foreground="#CCFFFFFF"
                                                Text="{x:Bind Author, Mode=OneWay}"
                                                TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>

                    <!--  Loading indicator - overlaid  -->
                    <ProgressRing
                        x:Name="GridLoadingRing"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        IsActive="False" />
                </Grid>
            </ScrollViewer>

            <!--  Panel Status  -->
            <Border
                Grid.Row="2"
                Padding="16,8"
                Background="#252525"
                BorderBrush="#333333"
                BorderThickness="0,1,0,0">
                <TextBlock
                    x:Name="GridPanelStatus"
                    FontSize="11"
                    Foreground="#99FFFFFF"
                    TextWrapping="Wrap" />
            </Border>
        </Grid>

        <!--  Game Search Panel - Full Screen Slide Up  -->
        <Grid
            x:Name="GameSearchPanel"
            Background="#1F1F1F"
            RenderTransformOrigin="0.5,0.5"
            Visibility="Collapsed">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="SearchPanelTransform" Y="800" />
            </Grid.RenderTransform>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Panel Header with Back Button  -->
            <Grid
                Grid.Row="0"
                Padding="16,12"
                Background="#252525">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Back Button  -->
                <Button
                    Grid.Column="0"
                    Width="32"
                    Height="32"
                    Margin="0,0,12,0"
                    Click="CloseSearchPanel_Click"
                    Style="{StaticResource FluentIconButton}"
                    ToolTipService.ToolTip="Back">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Glyph="&#xE0A6;" />
                </Button>

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#FFFFFF"
                    Text="Manual search" />
            </Grid>

            <!--  Search Box and Results  -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Search Box  -->
                <StackPanel
                    Grid.Row="0"
                    Padding="16,16,16,0"
                    Spacing="0">
                    <Grid>
                        <TextBox
                            x:Name="GameSearchBox"
                            Height="40"
                            Padding="12,8,40,8"
                            VerticalContentAlignment="Center"
                            BorderThickness="1"
                            CornerRadius="4"
                            FontSize="13"
                            KeyDown="GameSearchBox_KeyDown">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBackground" Color="#1E1E1E" />
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="#1E1E1E" />
                                <SolidColorBrush x:Key="TextControlForeground" Color="White" />
                                <SolidColorBrush x:Key="TextControlForegroundFocused" Color="White" />
                                <SolidColorBrush x:Key="TextControlBorderBrush" Color="#404040" />
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#666666" />
                            </TextBox.Resources>
                        </TextBox>

                        <!--  Search Icon Button  -->
                        <Button
                            Width="32"
                            Height="32"
                            Margin="0,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="SearchGames_Click"
                            CornerRadius="4"
                            IsTabStop="False"
                            ToolTipService.ToolTip="Search">
                            <FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                Foreground="#FFFFFF"
                                Glyph="&#xE721;" />
                        </Button>
                    </Grid>
                </StackPanel>

                <!--  Search Results  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <StackPanel x:Name="SearchResultsContainer" Padding="16,8,16,16">
                            <!--  Results List  -->
                            <ListView
                                x:Name="SearchResultsListView"
                                Background="Transparent"
                                IsItemClickEnabled="True"
                                ItemClick="SearchResult_Click"
                                SelectionMode="None">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0,0,0,2" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Grid
                                                        x:Name="RootGrid"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                        <ContentPresenter
                                                            Margin="12,8"
                                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                            Content="{TemplateBinding Content}"
                                                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="CommonStates">
                                                                <VisualState x:Name="Normal" />
                                                                <VisualState x:Name="PointerOver">
                                                                    <VisualState.Setters>
                                                                        <Setter Target="RootGrid.Background" Value="#2D2D2D" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed">
                                                                    <VisualState.Setters>
                                                                        <Setter Target="RootGrid.Background" Value="#333333" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="sgdbModels:SteamGridDbGame">
                                        <StackPanel Spacing="4">
                                            <TextBlock
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="#FFFFFF"
                                                Text="{x:Bind Name}"
                                                TextWrapping="Wrap" />
                                            <TextBlock FontSize="11" Foreground="#99FFFFFF">
                                                <Run Text="ID: " />
                                                <Run Text="{x:Bind Id}" />
                                                <Run Text=" • " />
                                                <Run Text="Verified: " />
                                                <Run Text="{x:Bind Verified}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!--  Loading indicator  -->
                        <ProgressRing
                            x:Name="SearchLoadingRing"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            IsActive="False" />
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!--  Panel Status  -->
            <Border
                Grid.Row="2"
                Padding="16,8"
                Background="#252525"
                BorderBrush="#333333"
                BorderThickness="0,1,0,0">
                <TextBlock
                    x:Name="SearchPanelStatus"
                    FontSize="11"
                    Foreground="#99FFFFFF"
                    TextWrapping="Wrap" />
            </Border>
        </Grid>
    </Grid>
</Page>
